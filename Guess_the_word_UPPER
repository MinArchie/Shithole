word = "ECHO"
guess = input("Guess the 4-letter word:")
Word=""
for i in range (len(guess)):
    if guess[i].islower():
        Word+=guess[i].upper()
    else:
        Word+=guess[i]
        
tries = 1

if Word != word:
    print("Wrong answer. Try again if you have the nerve.")
    tries += 1
    guess = input("Guess the 4-letter word:")
    Word=""
    for i in range (len(guess)):
        if guess[i].islower():
            Word+=guess[i].upper()
        else:
            Word+=guess[i]
if Word != word and tries == 2:
    print("You failed, you mother f-ing piech of shit. The word was ECHO.")

else:
     print("Well done you guessed correctly!")
