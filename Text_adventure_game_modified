def password():
    location = "Exit"
    direction = ""

    print()
    time.sleep(1)
    print("You are at the", location, ". Or you hope it is.")
    print()
    time.sleep(1)
    raw = input("There's a safe with a FOUR letter code.")

    while raw != "": raw = input("(Please press ENTER key to continue)")
    pass
    print("Do you wish to try? Remember, you have a limited amount of attempts.")
    raw = input("Head Back if you think you aren't ready.")

    while raw != "": raw = input("(Please press ENTER key to continue)")
    pass
    print()

    print()
    possible_moves = rooms[location].keys()
    print("possible moves:", *possible_moves)

    direction = input("Your choice? \n>> ").lower().strip()
    print("You entered:", direction)

    if direction == "back":
        print()
        print()
        waiting_area()
    elif direction == "try":
        word = "bird"
        time.sleep(1)
        print("REMEMBER, you have 2 attemps only.")
        time.sleep(1)
        guess = input("\nGuess the 4-letter word: ").lower().strip()
        tries = 1
        if guess != word:
            print("\nINCORRECT PASSWORD.")
            print("Try again, and get it right if you wish to live.")
            tries += 1
            guess = input("\nGuess the 4-letter word: ")
        if guess != word and tries == 2:
            print()
            print("\nINCORRECT PASSWORD")
            time.sleep(0.3)
            raw = input("You got it wrong!")

            while raw != "": raw = input("(Please press ENTER key to continue)")
            pass
            print()
            raw = input("\nA tiny part of you wished that this meant you would die. For real.")

            while raw != "": raw = input("(Please press ENTER key to continue)")
            pass
            raw = input("But reality is often disappointing.")

            while raw != "": raw = input("(Please press ENTER key to continue)")
            pass
            print()
            raw = input("You're back at the White Room again.")

            while raw != "": raw = input("(Please press ENTER key to continue)")
            pass
            print()
            raw = input("Just like every other time.")

            while raw != "": raw = input("(Please press ENTER key to continue)")
            pass
            raw = input("Death just doesn't seem to exist here.")

            while raw != "": raw = input("(Please press ENTER key to continue)")
            pass
            print()
            print()
            white_room()
        print()
        print("CORRECT PASSWORD")
        print()
        safe()
    elif direction == "quit":
        print("")
        time.sleep(1)
        quit("GAME TERMINATING...")
    else:
        print()
        print("Invalid move! \nOnly Enter Valid Statements.")
        print()
        print()
        password()


