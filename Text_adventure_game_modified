        while raw != "": raw = input("(Please press ENTER key to continue)")
        pass
        print()
        print()
        raw = input("You wake up in the white room.")
        while raw != "": raw = input("(Please press ENTER key to continue)")
        pass
        white_room()

    elif answer == "blue":
        print()
        time.sleep(1)
        raw = input("You knew it was coming, but still flinched when she strangles you.")

        while raw != "": raw = input("(Please press ENTER key to continue)")
        pass
        raw = input()

        while raw != "": raw = input("(Please press ENTER key to continue)")
        pass
        print("Her Black eyes still haunt your memories.")
        print()
        print("Maybe Blue isn’t the answer.")
        raw = input("(Press Enter to Continue...)")

        while raw != "": raw = input("(Please press ENTER key to continue)")
        pass
        print()
        print()
        raw = input("You wake up in the white room.")

        while raw != "": raw = input("(Please press ENTER key to continue)")
        pass
        white_room()

    elif answer == "black":
        print()
