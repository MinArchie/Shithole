def waiting_area():
    location = "Waiting_Area"
    direction = ""

    while direction != "exit":

        print()
        time.sleep(0.7)
        print("You are in the", location)
        print()
        time.sleep(0.7)
        raw = input("The deeper levels always felt strange to you.")

        while raw != "": raw = input("(Please press ENTER key to continue)")
        pass
        raw = input("The Waiting Area is nothing much, except for the safe locker.")

        while raw != "": raw = input("(Please press ENTER key to continue)")
        pass
        raw = input("To the left is an operating room and to the right... a morgue.")

        while raw != "": raw = input("(Please press ENTER key to continue)")
        pass
        raw = input("There’s also a supply closet.")

        while raw != "": raw = input("(Please press ENTER key to continue)")
        pass
        print("You may also go back up the staircase. (Type 'up')")
        print()

        time.sleep(0.7)
        print()
        possible_moves = rooms[location].keys()
        print("possible moves:", *possible_moves)

        direction = input("Move which direction? \n>> ").lower().strip()
        print("You entered:", direction)

        if direction == "left":
            print()
            print()
            operation_room()
        elif direction == "up":
            print()
            print()
            staircase()
        elif direction == "right":
            print()
            print()
            morgue()
        elif direction == "exit":
            print()
            print()
            password()
        elif direction == "inspect":
            if 'bug spray' not in inventory:
                print()
                time.sleep(1)
                raw = input("You navigate your way through the chairs.")

                while raw != "": raw = input("(Please press ENTER key to continue)")
                pass
                raw = input("You see a door that leads to the cleaning closet.")

                while raw != "": raw = input("(Please press ENTER key to continue)")
                pass
                raw = input("In there you find a bottle of bug spray.")

                while raw != "": raw = input("(Please press ENTER key to continue)")
                pass
                print()
                take_spray()
            elif 'bug spray' in inventory:
                print()
                time.sleep(1)
                print("There is nothing left to inspect.")
                print()
                print()
                waiting_area()
            elif direction == "quit":
                print("")
                time.sleep(1)
                quit("GAME TERMINATING...")
        elif direction == "quit":
            print("")
            time.sleep(1)
            quit("GAME TERMINATING...")
        else:
            print()
            print("Invalid move! \nOnly Enter Valid Statements.")
            print()
            print()
            waiting_area()


