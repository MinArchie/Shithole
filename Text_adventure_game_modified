def deny():

    print()
    time.sleep(1)
    raw = input("The surgeon charges at you with a scalpel.")

    while raw != "": raw = input("(Please press ENTER key to continue)")
    pass
    print()
    print("Possible moves: 'Inventory' or 'Run'")
    decide = input("Quick! What do you do?: \n>>").lower().strip()

    if decide == "inventory":
        print()
        print(inventory)
        if not inventory:
            print()
            time.sleep(1)
            raw = input("Uh-oh. Looks like you have nothing to defend yourself with.")

            while raw != "": raw = input("(Please press ENTER key to continue)")
            pass
            print("Only thing you can do now, is run.")
            print("So you turn around and try to run")
            print("But he catches up with you.")
            print()
            time.sleep(1)
            print("You wake up in the white room.")
            raw = input("Maybe next time you should find something to defend yourself with...")

            while raw != "": raw = input("(Please press ENTER key to continue)")
            pass
            print()
            print()
            white_room()
        else:
            defend = input("Pick something to defend yourself with. \n>> ").lower().replace(" ","")
