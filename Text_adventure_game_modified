    direction = ""

    print()
    time.sleep(1)
    print("You are in the", location)
    print()
    time.sleep(1)
    raw = input("A young girl, holding out two cards. One red and One blue.")
    while raw != "": raw = input("(Please press ENTER key to continue)")
    pass
    raw = input("Her empty BLACK eyes peak at your soul from the fringes of her BLACK hair. ")
    while raw != "": raw = input("(Please press ENTER key to continue)")
    pass
    raw = input("She asks you to choose. But regardless of your choice, you die each time.")
    while raw != "": raw = input("(Please press ENTER key to continue)")
    pass
    print()
